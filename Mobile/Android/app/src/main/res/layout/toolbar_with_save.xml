<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    android:id="@+id/toolbar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    style="@style/PrimaryToolbar"
    android:elevation="3dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/cancelBtn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingEnd="12dp"
        android:layout_alignParentStart="true"
        android:text="@string/cancel"
        android:gravity="center_vertical"
        android:textColor="@color/cancel"
        android:background="@android:color/transparent"/>
    <TextView
        android:id="@+id/toolbar_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/toolbar_text"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/saveBtn"
        android:layout_toEndOf="@id/cancelBtn"
        android:textColor="@color/om_black"
        android:fontFamily="@font/ramabhadra_regular"
        android:text="asdasdsa"
        />

    <TextView
        android:id="@+id/saveBtn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingHorizontal="16dp"
        android:layout_alignParentEnd="true"
        android:text="@string/save"
        android:gravity="center_vertical"
        android:textColor="@color/util_buttons_text"/>
    </RelativeLayout>
</androidx.appcompat.widget.Toolbar>