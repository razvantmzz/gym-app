<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@color/om_white">

    <RelativeLayout
        android:id="@+id/v_cell_rank_image_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:layout_centerVertical="true">
        <ImageView
            android:id="@+id/iv_cell_rank_user"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:translationZ="-1dp"
            android:src="@drawable/ic_logo"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_cell_rank_info_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/v_cell_rank_image_container"
        android:layout_toStartOf="@id/tv_cell_points">
        <TextView
            android:id="@+id/tv_cell_rank_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Valentin Grigore"
            android:lines="1"
            android:textColor="@color/om_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_cell_rank_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="Masters"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_cell_rank_position"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:lines="1"
            android:fontFamily="@font/ramabhadra_regular"
            android:textColor="@color/om_black"
            android:text="1st"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_cell_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ramabhadra_regular"
        android:text="7A+"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/om_black"
        android:textSize="16sp" />

</RelativeLayout>